{
  "name": "debugger",
  "version": "1.0.0",
  "description": "Serve the entire folder found under `build/<PLATFORM>/pages/debug-tools`",
  "main": "index.js",
  "scripts": {
    "build": "node index.mjs",
    "build.dev": "node index.mjs --env development",
    "test": "playwright test --project apple",
    "test.schema": "node pages/debug-tools/schema/schema.test.mjs",
    "test.windows": "npm run test -- --project windows",
    "test.apple": "npm run test -- --project apple",
    "test.headed": "npm run test -- --project apple --headed",
    "test.ui": "npm run test -- --project apple --ui",
    "_pretest": "npm run build.dev && npm run test.schema",
    "_pretest.headed": "npm run build.dev && npm run test.schema",
    "test-int-x": "npm run test",
    "test-int": "npm run test",
    "serve": "http-server -c-1 --port 3210",
    "schema": "node schema.mjs",
    "watch": "chokidar 'src' 'schema' 'editor' -i schema/__generated__ -c 'NODE_ENV=development npm run build.dev' --initial",
    "browser-sync": "browser-sync ../"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.37.1",
    "@types/react": "^18.2.14",
    "@xstate/inspect": "^0.8.0",
    "@xstate/react": "^3.2.2",
    "classnames": "^2.3.2",
    "esbuild": "^0.18.19",
    "fast-json-patch": "^3.1.1",
    "history": "^5.3.0",
    "http-server": "^14.1.1",
    "json-schema-to-typescript": "^13.0.2",
    "monaco-editor": "^0.39.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tldts": "^6.0.14",
    "tiny-invariant": "^1.3.1",
    "ts-to-zod": "^3.1.3",
    "urlpattern-polyfill": "^9.0.0",
    "web-resource-inliner": "^6.0.1",
    "xstate": "^4.38.0",
    "zod": "^3.6.0",
    "chokidar-cli": "^3.0.0"
  }
}
