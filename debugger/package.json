{
  "name": "debugger",
  "version": "1.0.0",
  "description": "Serve the entire folder found under `build/<PLATFORM>/pages/debug-tools`",
  "main": "index.js",
  "scripts": {
    "build": "node index.mjs",
    "build.dev": "node index.mjs --env development",
    "test": "npm run test.unit",
    "test.int": "playwright test",
    "test.windows": "npm run test -- --project windows",
    "test.apple": "npm run test -- --project apple",
    "test.headed": "npm run test.int -- --project http --headed",
    "test.ui": "npm run test -- --project apple --ui",
    "test.unit": "web-test-runner \"unit-tests/**/*.test.js\" --node-resolve --config=../web-test-runner.config.mjs",
    "test.watch": "npm run test.unit -- --watch",
    "serve.http": "node serve.mjs -c config/integration.json",
    "start": "npm run build && npm run serve.http",
    "dev": "npm run build.dev && npm run serve.http",
    "watch": "chokidar 'src' 'schema' 'editor' -i schema/__generated__ -c 'NODE_ENV=development npm run build.dev' --initial",
    "browser-sync": "browser-sync dist",
    "schema": "node schema.mjs"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/react": "^18.2.14",
    "@xstate/inspect": "^0.8.0",
    "@xstate/react": "^3.2.2",
    "browser-sync": "^2.29.3",
    "chokidar-cli": "^3.0.0",
    "classnames": "^2.3.2",
    "esbuild": "^0.19.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "express": "^4.18.2",
    "fast-json-patch": "^3.1.1",
    "history": "^5.3.0",
    "http-server": "^14.1.1",
    "json-diff": "^1.0.6",
    "json-schema-to-typescript": "^13.0.2",
    "monaco-editor": "^0.39.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "strip-ansi": "^7.1.0",
    "text-diff": "^1.0.1",
    "tiny-invariant": "^1.3.1",
    "tldts": "^6.0.14",
    "ts-to-zod": "^3.1.3",
    "web-resource-inliner": "^6.0.1",
    "xstate": "^4.38.0",
    "zod": "^3.6.0"
  }
}
