{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "GetFeaturesResponse",
  "additionalProperties": false,
  "properties": {
    "features": {
      "additionalProperties": true,
      "type": "object",
      "properties": {
        "remoteResources": {
          "additionalProperties": false,
          "type": "object",
          "properties": {
            "resources": {
              "type": "array",
              "items": {
                "$ref": "remote-resource-ref.json"
              }
            },
            "resourceServer": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "addresses": {
                  "type": "array",
                  "items": {
                    "title": "ResourceServerAddress",
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                      "baseURL": {
                        "type": "string"
                      }
                    },
                    "required": ["baseURL"]
                  }
                }
              },
              "required": ["addresses"]
            }
          },
          "required": ["resources"]
        },
        "userScripts": {
          "additionalProperties": false,
          "type": "object",
          "properties": {
            "scripts": {
              "type": "array",
              "items": {
                "type": "object",
                "title": "UserScript",
                "additionalProperties": false,
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "id": {
                    "type": "string"
                  },
                  "contents": {
                    "type": "string"
                  }
                },
                "required": ["name", "id", "contents"]
              }
            }
          },
          "required": ["scripts"]
        }
      },
      "required": ["remoteResources"]
    }
  },
  "required": ["features"]
}
