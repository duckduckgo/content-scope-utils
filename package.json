  "devDependencies": {
    "@esm-bundle/chai": "^4.3.4-fix.0",
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "@typescript-eslint/parser": "^5.44.0",
    "@web/test-runner": "^0.15.0",
    "typedoc": "^0.23.21",
    "typescript": "^4.9.3",
    "eslint": "^8.28.0",
    "prettier": "^2.8.0",
    "serve": "^14.1.2",
    "@playwright/test": "^1.28.0"
  },
